 
<table>
<% if @records %>	
<tr>
	<td style="font-weight:bold;" >
		Record Type	
	</td>
	
	<td style="font-weight:bold;" >
		Date Completed <span style="font-size:9px; font-weight:normal; vertical-align: middle;" >(MM/DD/YYYY)</span>
	</td>
</tr>
	<% for f in @records %>
	<% @milestone_record = f
		@milestone_record.date_completed = JobsController::EDIT_TEXT if f.date_completed_is_nil_or_blank
	%>
		<tr>
			<td>
				<%= f.milestone_task.milestone_validation.name if f.milestone_task and f.milestone_task.milestone_validation 
				%>
			</td>
			
			<td style="padding-left:20px;">

				<%= in_place_editor_field :milestone_record, :date_completed %> 

			</td>
		</tr>
	<% end %>
<% end %>	
</table>
<% if @error %>
<span style="color:red; font-weight:bold;" ><%= @error %></span>
<% end %>
